<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="32dp"
    tools:context=".HomeActivity">

    <!-- ScrollView to allow scrolling -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">



            <!-- Title Text -->
            <TextView
                android:id="@+id/welcomeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:text="Welcome to Your App!"
                android:textColor="@color/text_primary"
                android:textSize="36sp"
                android:textStyle="bold" />

            <!-- App Summary Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center"
                android:text="Welcome to Chase It, a program that meant to help you Get better at running, and improve your stamina, You can chat with our Expert chat in running, nutritions and health , A running page with timers, steps, speed and distance counters and a map, and so much more! "
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="italic" />

            <!-- Settings Button -->
            <Button
                android:id="@+id/btnHomeUserDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@color/button_primary"
                android:drawableLeft="@drawable/ic_settings"
                android:drawablePadding="8dp"
                android:elevation="8dp"
                android:fontFamily="@font/roboto_medium"
                android:padding="16dp"
                android:text="Settings"
                android:textColor="@color/button_text"
                android:textSize="20sp" />

            <!-- ChatBot Button -->
            <Button
                android:id="@+id/btnAI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@color/button_accent"
                android:drawableLeft="@drawable/ic_ai"
                android:drawablePadding="8dp"
                android:elevation="8dp"
                android:fontFamily="@font/roboto_medium"
                android:padding="16dp"
                android:text="Chat Bot"
                android:textColor="@color/button_text"
                android:textSize="20sp" />

            <!-- Running Button -->
            <Button
                android:id="@+id/btnTimer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@color/warning_color"
                android:drawableLeft="@drawable/ic_timer"
                android:drawablePadding="8dp"
                android:elevation="8dp"
                android:fontFamily="@font/roboto_medium"
                android:padding="16dp"
                android:text="Running"
                android:textColor="@color/text_on_primary"
                android:textSize="20sp" />

            <!-- Logout Button -->
            <Button
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="16dp"
                android:backgroundTint="@color/error_color"
                android:drawableLeft="@drawable/logout_icon"
                android:drawablePadding="8dp"
                android:elevation="8dp"
                android:fontFamily="@font/roboto_medium"
                android:padding="16dp"
                android:text="Logout"
                android:textColor="@color/button_text"
                android:textSize="20sp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
